<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>org.github.msx80.omicron</groupId>
  <artifactId>omicron-libretro-java</artifactId>
  <version>0.0.1</version>
  <name>Omicron Libretro Backend</name>

  <packaging>jar</packaging>
	<repositories>
		<repository>
		    <id>jitpack.io</id>
		    <url>https://jitpack.io</url>
		</repository>
	</repositories>
  <dependencies>
    <dependency>
    <groupId>com.badlogicgames.gdx</groupId>
    <artifactId>gdx</artifactId>
    <version>1.9.14</version>
  </dependency>


<dependency>
    <groupId>com.badlogicgames.gdx</groupId>
    <artifactId>gdx-backend-lwjgl3</artifactId>
    <version>1.9.14</version>
</dependency>

<dependency>
    <groupId>com.github.msx80.omicron</groupId>
    <artifactId>omicron-engine</artifactId>
    <version>0.0.3</version>
</dependency>
<dependency>
    <groupId>com.github.msx80.omicron</groupId>
    <artifactId>omicron-loader</artifactId>
    <version>0.0.3</version>
</dependency>
  
    <dependency>
      <groupId>com.github.msx80</groupId>
      <artifactId>omicron-api</artifactId>
      <version>0.0.1</version>
    </dependency>
